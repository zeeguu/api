# =============================================================================
# ZEEGUU ENVIRONMENT CONFIGURATION
# =============================================================================
# SECURITY WARNING: This file contains placeholder values for development.
# For production, create a .env file with secure values and NEVER commit it!
# Generate secure passwords with: python -c "import secrets; print(secrets.token_hex(16))"
# =============================================================================

ZEEGUU_DATA_FOLDER=/home/zeeguu/data
ZEEGUU_RESOURCES_FOLDER=/home/zeeguu/resources

# Database credentials - CHANGE IN PRODUCTION
ZEEGUU_MYSQL_ROOT_PASSWORD=CHANGE_ME_root_password
ZEEGUU_MYSQL_DB=zeeguutest
ZEEGUU_MYSQL_USER=zeeguutest
ZEEGUU_MYSQL_USER_PASSWORD=CHANGE_ME_user_password

# FMD Database - CHANGE IN PRODUCTION
FMD_ROOT_PASS=CHANGE_ME_fmd_root
FMD_MYSQL_DB=fmdtest
FMD_MYSQL_USER=fmdtest
FMD_MYSQL_USER_PASS=CHANGE_ME_fmd_password

# Translation API Keys - Get from respective providers
# Leave empty or remove if not using the service
MICROSOFT_TRANSLATE_API_KEY=
GOOGLE_TRANSLATE_API_KEY=
WORDNIK_API_KEY=
MULTI_LANG_TRANSLATOR_AB_TESTING=
YOUTUBE_API_KEY=

# SMTP Configuration - Use app-specific password for Gmail
SMTP_EMAIL=
SMTP_PASSWORD=

# API Security - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_SECRET_KEY=CHANGE_ME_generate_secure_key
INVITATION_CODE=CHANGE_ME_use_random_code

# FMD Admin - CHANGE IN PRODUCTION
FMD_USERNAME=fmdadmin
FMD_PASSWORD=CHANGE_ME_fmd_admin_password
FMD_GUEST_USERNAME=fmdguest
FMD_GUEST_PASSWORD=CHANGE_ME_fmd_guest_password
FMD_SECURITY_TOKEN=CHANGE_ME_generate_token



